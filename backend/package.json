{
  "name": "testflux-backend",
  "version": "1.0.0",
  "description": "Backend API for Test Results Dashboard",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon --inspect=0.0.0.0:9229 src/server.js",
    "build": "echo 'No build step required for Node.js'",
    "test": "NODE_ENV=test jest --passWithNoTests",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "test:integration": "NODE_ENV=test jest --testPathPattern=integration",
    "test:unit": "NODE_ENV=test jest --testPathPattern=unit",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\"",
    "type-check": "echo 'Type checking not required for JavaScript'",
    "db:migrate": "node src/database/migrate.js",
    "db:seed": "node src/database/seed.js",
    "db:reset": "node src/database/reset.js",
    "docs:generate": "swagger-jsdoc -d swaggerDef.js -o docs/api.json src/routes/*.js",
    "security:audit": "npm audit",
    "validate:env": "node src/utils/validateEnv.js"
  },
  "dependencies": {
    "fastify": "^4.24.3",
    "@fastify/cors": "^8.4.0",
    "@fastify/multipart": "^8.0.0",
    "@fastify/jwt": "^7.2.4",
    "@fastify/rate-limit": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.0.0",
    "@fastify/compress": "^6.5.0",
    "@fastify/static": "^6.12.0",
    "@fastify/cookie": "^9.1.0",
    "pg": "^8.11.3",
    "pg-pool": "^3.6.1",
    "bcryptjs": "^2.4.3",
    "joi": "^17.11.0",
    "dotenv": "^16.3.1",
    "fast-xml-parser": "^4.3.2",
    "nodemailer": "^6.9.7",
    "axios": "^1.6.0",
    "dayjs": "^1.11.10",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "sanitize-html": "^2.11.0",
    "validator": "^13.11.0",
    "multer": "^1.4.5-lts.1",
    "archiver": "^6.0.1",
    "csv-parser": "^3.0.0",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "@sentry/node": "^7.81.0",
    "@sentry/profiling-node": "^1.3.2",
    "posthog-node": "^3.1.3",
    "prom-client": "^15.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-node": "^11.1.0",
    "@babel/preset-env": "^7.23.3",
    "supertest": "^6.3.3",
    "prettier": "^3.1.0",
    "swagger-jsdoc": "^6.2.8",
    "cross-env": "^7.0.3",
    "testcontainers": "^10.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "test-results",
    "automation",
    "dashboard",
    "fastify",
    "api"
  ],
  "author": "TestFlux Team",
  "license": "MIT"
}
