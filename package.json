{
  "name": "testflux",
  "version": "1.0.0",
  "description": "Enterprise test results dashboard for automated testing workflows",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:backend && npm run install:frontend",
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:e2e": "playwright test",
    "test:all": "npm run test && npm run test:e2e",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:fix": "npm run lint:backend -- --fix && npm run lint:frontend -- --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,yml,yaml}\"",
    "type-check": "cd frontend && npm run type-check",
    "docker:dev": "docker-compose up -d",
    "docker:prod": "docker-compose -f deployment/docker-compose.prod.yml up -d",
    "docker:build": "docker-compose build",
    "docker:down": "docker-compose down",
    "db:reset": "docker-compose down -v && docker-compose up -d db",
    "db:migrate": "cd backend && npm run db:migrate",
    "db:seed": "cd backend && npm run db:seed",
    "docs:api": "cd backend && npm run docs:generate",
    "docs:serve": "docsify serve docs",
    "security:audit": "npm audit --workspaces",
    "security:fix": "npm audit fix --workspaces",
    "release": "standard-version",
    "release:dry": "standard-version --dry-run",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules",
    "clean:build": "rm -rf backend/dist frontend/dist",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "concurrently": "^8.2.2",
    "docsify-cli": "^4.4.4",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "standard-version": "^9.5.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/testflux.git"
  },
  "keywords": [
    "testing",
    "automation",
    "dashboard",
    "robot-framework",
    "zap",
    "k6",
    "ci-cd",
    "enterprise"
  ],
  "author": "TestFlux Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/your-org/testflux/issues"
  },
  "homepage": "https://github.com/your-org/testflux#readme"
}
