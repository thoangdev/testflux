# ==============================================
# TestFlux Environment Configuration
# ==============================================

# ------------------
# Application Settings
# ------------------
NODE_ENV=development
PORT=3001
HOST=localhost

# ------------------
# Database Configuration
# ------------------
# Primary connection string (recommended)
DATABASE_URL=postgresql://testflux:testflux_dev@localhost:5432/testflux

# Alternative individual settings (used if DATABASE_URL not provided)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=testflux
DB_USER=testflux
DB_PASSWORD=testflux_dev

# ------------------
# Security Configuration
# ------------------
# JWT secret key (minimum 32 characters for production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars

# CORS settings
CORS_ORIGIN=http://localhost:3000

# ------------------
# Rate Limiting
# ------------------
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# ------------------
# File Upload Configuration
# ------------------
MAX_FILE_SIZE=50MB
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=xml,json

# ------------------
# Frontend Configuration
# ------------------
VITE_API_URL=http://localhost:3001

# ------------------
# Email Configuration (Optional)
# ------------------
# SMTP settings for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@testflux.com

# ------------------
# Notification Settings (Optional)
# ------------------
# Slack webhook for notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Microsoft Teams webhook
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR/TEAMS/WEBHOOK

# ------------------
# Logging Configuration
# ------------------
LOG_LEVEL=info
LOG_FORMAT=json

# ------------------
# Monitoring & Health Checks
# ------------------
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# ------------------
# Session Configuration
# ------------------
SESSION_SECRET=your-session-secret-key
SESSION_TIMEOUT=24h

# ------------------
# External Integrations
# ------------------
# GitHub integration for CI/CD
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ------------------
# Performance Settings
# ------------------
# Database connection pool
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000

# Request timeout
REQUEST_TIMEOUT=30000

# ------------------
# Development Settings
# ------------------
# Enable debug mode
DEBUG=testflux:*

# Hot reload for development
HOT_RELOAD=true

# ------------------
# Production Settings
# ------------------
# SSL/TLS settings (production only)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private-key.pem

# CDN settings (production only)
CDN_URL=https://cdn.yourdomain.com

# ------------------
# Backup Configuration
# ------------------
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ------------------
# Feature Flags
# ------------------
FEATURE_NOTIFICATIONS=true
FEATURE_FILE_UPLOAD=true
FEATURE_TRENDS_ANALYSIS=true
FEATURE_USER_MANAGEMENT=true

# ------------------
# Cache Configuration
# ------------------
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# ------------------
# Testing Configuration
# ------------------
TEST_DATABASE_URL=postgresql://testflux:testflux_test@localhost:5432/testflux_test
TEST_JWT_SECRET=test-jwt-secret-for-testing-only

# ------------------
# Error Tracking & Monitoring
# ------------------
# Sentry for error tracking and performance monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development
SENTRY_SAMPLE_RATE=1.0
SENTRY_TRACES_SAMPLE_RATE=0.1

# ------------------
# Analytics & User Tracking
# ------------------
# PostHog for product analytics
POSTHOG_API_KEY=your-posthog-api-key
POSTHOG_HOST=https://app.posthog.com
POSTHOG_ENABLED=true

# ------------------
# Security Scanning
# ------------------
# Snyk for vulnerability scanning
SNYK_TOKEN=your-snyk-token
SNYK_ORG=your-snyk-organization

# ------------------
# Code Quality
# ------------------
# SonarQube/SonarCloud configuration
SONAR_TOKEN=your-sonar-token
SONAR_PROJECT_KEY=testflux
SONAR_ORGANIZATION=your-sonar-org
SONAR_HOST_URL=https://sonarcloud.io
